{
  "name": "tsp-ga",
  "version": "1.0.0",
  "description": "Travelling salesman problem solved via a genetic algorithm",
  "scripts": {
    "dev": "webpack-dashboard -- webpack-dev-server --colors --output-public-path=/out/",
    "test": "TS_NODE_PROJECT=tests/tsconfig.test.json nyc mocha -r ts-node/register tests/**/*.spec.ts",
    "cc-coverage": "codeclimate-test-reporter < coverage/lcov.info",
    "build": "webpack"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.6",
    "@types/sinon": "^4.1.3",
    "@types/sinon-chai": "^2.7.29",
    "awesome-typescript-loader": "^3.4.1",
    "chai": "^4.1.2",
    "mocha": "^5.0.1",
    "nyc": "^11.4.1",
    "raw-loader": "^0.5.1",
    "sinon": "^4.3.0",
    "sinon-chai": "^2.14.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths-webpack-plugin": "^2.0.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.7.1",
    "webpack": "^3.11.0",
    "webpack-dashboard": "^1.1.1",
    "webpack-dev-server": "^2.11.1"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "tests/**/*.ts",
      "out/**/*.*",
      "src/index.ts",
      "webpack.config.js",
      "coverage/*",
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true  
  }
}
